<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dm2.sqlite.Actividad2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/lblCodigo"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCodigo"
        android:layout_toRightOf="@id/lblCodigo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo: "
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/lblCodigo"
        android:layout_marginTop="10dp"
        android:id="@+id/lblTitulo"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitulo"
        android:layout_toRightOf="@id/lblTitulo"
        android:layout_below="@id/txtCodigo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor: "
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/lblTitulo"
        android:layout_marginTop="10dp"
        android:id="@+id/lblAutor"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtAutor"
        android:layout_toRightOf="@id/lblTitulo"
        android:layout_below="@id/txtTitulo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero: "
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/lblAutor"
        android:layout_marginTop="10dp"
        android:id="@+id/lblGenero"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtGenero"
        android:layout_toRightOf="@id/lblTitulo"
        android:layout_below="@id/txtAutor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:layout_below="@+id/txtGenero"
        android:layout_marginLeft="50dp"
        android:id="@+id/btnInsertar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:layout_below="@+id/txtGenero"
        android:layout_toRightOf="@id/btnInsertar"
        android:id="@+id/btnBorrar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:layout_below="@+id/txtGenero"
        android:layout_toRightOf="@id/btnBorrar"
        android:id="@+id/btnModificar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:layout_below="@+id/btnBorrar"
        android:layout_toRightOf="@id/btnInsertar"
        android:id="@+id/btnListar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnListar"
        android:id="@+id/txtApoteosico"/>



</RelativeLayout>
